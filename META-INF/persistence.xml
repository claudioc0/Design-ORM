<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="pessoaPU">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>jdbc/yourDataSource</jta-data-source>
        <class>model.Pessoa</class>  <!-- Classe model.Pessoa que você já tem -->
        <properties>
            <property name="javarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/design"/>
            <property name="javarta.persistence.jdbc.user" value="root"/>
            <property name="javarta.persistence.jdbc.password" value="PUC@1234"/>
            <property name="javarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="jogoPU">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.JogoPC</class> <!-- Adicionando a classe model.JogoPC -->
    <class>model.JogoConsole</class> <!-- Adicionando a classe model.JogoConsole -->
    <properties>
        <property name="javarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/design"/>
        <property name="javarta.persistence.jdbc.user" value="root"/>
        <property name="javarta.persistence.jdbc.password" value="PUC@1234"/>
        <property name="javarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        <property name="eclipselink.logging.level" value="FINE"/>
    </properties>


    </persistence-unit>

</persistence>
