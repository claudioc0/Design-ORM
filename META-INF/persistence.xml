<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="DesignPU">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <!-- Define as classes de entidade -->
        <class>model.Pessoa</class>
        <class>model.Jogo</class>
        <class>model.JogoPC</class>
        <class>model.JogoConsole</class>


        <!-- Aqui você deve definir o DataSource ou parâmetros JDBC diretos -->
        <properties>
            <!-- Propriedades do banco de dados -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/design"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="PUC@1234"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- Propriedades do EclipseLink (opcional) -->
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
        </properties>

    </persistence-unit>
</persistence>
